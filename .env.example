# Django Environment Variables
# Copy this file to .env and fill in the actual values

# Secret key for Django - generate a new one for production
SECRET_KEY=your-secret-key-here

# Debug mode - set to False in production
DEBUG=True

# Allowed hosts - comma-separated list of allowed hostnames
ALLOWED_HOSTS=localhost,127.0.0.1

# Superuser creation (for /setup/ endpoint)
# SUPERUSER=admin
# SUPERPASS=your-secure-password

# Database settings (if using a different database than SQLite)
# DATABASE_URL=postgresql://user:password@localhost:5432/pickles

# Email settings (if using email functionality)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@example.com
# EMAIL_HOST_PASSWORD=your-email-password

# Additional environment-specific settings
# STATIC_ROOT=/path/to/static/files
# MEDIA_ROOT=/path/to/media/files